# Contract Explainer - Environment Configuration
# Copy this file to .env and fill in your actual values

# API Keys
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Flask Configuration
FLASK_ENV=production
FLASK_SECRET_KEY=your_super_secret_key_here_change_this
FLASK_HOST=0.0.0.0
FLASK_PORT=5001

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_FOLDER=uploads

# Security
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
RATE_LIMIT_PER_HOUR=100

# Monitoring & Analytics
GOOGLE_ADSENSE_CLIENT_ID=ca-pub-your-publisher-id
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=your_sentry_dsn_here

# Database (if needed for future features)
DATABASE_URL=sqlite:///contracts.db

# Email (for contact forms)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password